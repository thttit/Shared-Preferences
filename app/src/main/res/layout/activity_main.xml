<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_num"
        android:layout_width="376dp"
        android:layout_height="424dp"
        android:background="#BBBBBB"
        android:gravity="center"
        android:padding="15dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/btn_black"
        android:layout_width="93dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#222222"
        android:text="Black"
        app:layout_constraintStart_toStartOf="@+id/txt_num"
        app:layout_constraintTop_toBottomOf="@+id/txt_num" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="93dp"
        android:layout_height="70dp"
        android:backgroundTint="#E41C1C"
        android:text="Red"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_black"
        app:layout_constraintStart_toEndOf="@+id/btn_black" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="93dp"
        android:layout_height="70dp"
        android:backgroundTint="#1996DE"
        android:text="Blue"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_black"
        app:layout_constraintStart_toEndOf="@+id/btn_red"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="93dp"
        android:layout_height="70dp"
        android:backgroundTint="#2CAE31"
        android:text="Green"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_blue"
        app:layout_constraintStart_toEndOf="@+id/btn_blue" />

    <Button
        android:id="@+id/btn_Count"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9E9E9E"
        android:text="Count"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/btn_black"
        app:layout_constraintTop_toBottomOf="@+id/btn_black" />

    <Button
        android:id="@+id/btn_Add"
        android:layout_width="261dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#298DDD"
        android:text="Add"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/btn_Count"
        app:layout_constraintTop_toBottomOf="@+id/btn_Count" />

</androidx.constraintlayout.widget.ConstraintLayout>